<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/abc_popup_background_mtrl_mult" >

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="patient name"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/disease_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patient_name"
        android:layout_below="@+id/patient_name"
        android:text="disease discription"
        />

    <TextView
        android:id="@+id/appointment_timings"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/disease_text"
        android:layout_below="@+id/disease_text"
        android:textColor="@color/accent"
        android:text="Appointment Timings:" />

    <TextView
        android:id="@+id/appointment_timings_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/appointment_timings"
        android:textColor="@color/accent"
        android:layout_below="@+id/appointment_timings"
        android:text="TextView" />

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appointment_timings_txt"
        android:layout_marginRight="10dp"
        android:textColor="@color/icons"
        android:background="@drawable/rounded_button"
        android:text="Accept"
        />

    <Button
        android:id="@+id/reject_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/accept_btn"
        android:layout_toLeftOf="@+id/accept_btn"
        android:textColor="@color/icons"
        android:background="@drawable/reject_rounded_btn"
        android:layout_marginRight="10dp"
        android:text="Reject"
        />

</RelativeLayout>
